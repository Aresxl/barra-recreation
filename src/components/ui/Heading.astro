---
import type { string } from "astro:schema";

const sizes = {
  h1: "h1",
  h2: "h2",
  h3: "h3",
  h4: "h4",
  h5: "h5",
  h6: "h6",
} as const;

interface Props {
  tag: keyof typeof sizes;
  size: keyof typeof sizes;
  title: string;
}

const { tag, size, title } = Astro.props;
const CustomTag = tag;
---

<CustomTag class={sizes[size]}>
  {title}
</CustomTag>
